<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Naidis_App.lumemem"
             Title="lumemem">
    <StackLayout Padding="20">
        <AbsoluteLayout x:Name="snowmanLayout" HeightRequest="400" BackgroundColor="#87CEEB">
            <BoxView x:Name="bucket" Color="#FFD700"
                     AbsoluteLayout.LayoutBounds="0.5, 0.8, 0.2, 0.15"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="body" Color="White"
                     CornerRadius="50"
                     AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.3, 0.3"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="head" Color="White"
                     CornerRadius="50"
                     AbsoluteLayout.LayoutBounds="0.5, 0.3, 0.25, 0.25"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>

        <StackLayout Spacing="10">
            <Button Text="Спрятать снеговика" Clicked="HideSnowman_Clicked"/>
            <Button Text="Показать снеговика" Clicked="ShowSnowman_Clicked"/>
            <Button Text="Раскрасить случайным цветом" Clicked="RandomColor_Clicked"/>
            <Button Text="Растопить" Clicked="MeltSnowman_Clicked"/>
            <Button Text="Вращение" Clicked="RotateSnowman_Clicked"/>

            <Label x:Name="statusLabelControl" Text="Статус: Активен" FontSize="14"/>
        </StackLayout>
    </StackLayout>
</ContentPage>